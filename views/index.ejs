<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="resources/css/style.css">
    <title>Sistema Gestión Académica</title>
  </head>
  <body class="text-center">         
          <div class="contenedor">
            <% if (login) { %>                
                <h1>Usuario conectado: <strong><%= name %></strong></h1>                        
                <a href="logout" class="a-logout">Cerrar sesión</a>
            <%} else { %>
                <h1><strong><%= name %></strong></h1>   
                <a href="login" class="a-login">Ir a inicio de sesión </a>
            <% } %>
          </div>
  </body>
</html>